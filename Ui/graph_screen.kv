<GraphScreen>:
    name: "GraphScreen"

    ScrollView:
        do_scroll_y: True

        MDBoxLayout:
            id: graph_vertical_boxlayout
            orientation: "vertical"
            adaptive_width: False
            spacing: sp(110)
            padding: sp(50)
            size_hint_y: None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5}

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("results_final_speed")