<DrivetrainScreen>:
    name: "Drivetrain"

    ScrollView:
        do_scroll_y: True


        MDBoxLayout:
            id: drivetrain_vertical_boxlayout
            orientation: "vertical"
            adaptive_width: False
            spacing: sp(110)
            padding: sp(50)
            size_hint_y: None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5}

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDLabel:
                    pos_hint: {"center_x": 0.67}
                    text: "Drivetrain"
                    font_style: "H4"
                    theme_text_color: "Secondary"
                    halign: 'center'
                    anchor_x: 'center'
                    width: self.parent.width

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Layout"
                    mode: "fill"
                    size_hint_x: None
                    width: sp(300)
                    helper_text: "Possible layouts: fwd, rwd, awd"
                    on_text_validate: app.next_text_field(self)
                    helper_text_mode: "persistent"

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("drivetrain_layout")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Drivetrain Loss"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    width: sp(300)
                    on_text_validate: app.next_text_field(self)
                    helper_text_mode: "persistent"

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("drivetrain_loss")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Shifting Time (s)"
                    mode: "fill"
                    input_filter: 'float'
                    size_hint_x: None
                    width: sp(300)
                    on_text_validate: app.next_text_field(self)
                    helper_text_mode: "persistent"

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("drivetrain_shift_time")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Off Clutch RPM"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    width: sp(300)
                    on_text_validate: app.next_text_field(self)
                    helper_text_mode: "persistent"

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("drivetrain_off_clutch")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Gas Level"
                    mode: "fill"
                    input_filter: 'float'
                    size_hint_x: None
                    width: sp(300)
                    on_text_validate: app.next_text_field(self)
                    helper_text_mode: "persistent"

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("drivetrain_gas_level")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Final Drive Ratio"
                    mode: "fill"
                    input_filter: 'float'
                    size_hint_x: None
                    width: sp(300)
                    on_text_validate: app.next_text_field(self)
                    helper_text_mode: "persistent"

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("drivetrain_final_gear")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}


                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDIconButton:
                    id: button
                    icon: "car-shift-pattern"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release: app.dropdown_menu_gears.open()


                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    pos_hint: {"center_y": 0.5}
                    padding: sp(2)
                    on_press: app.dialog_information("add_gear")

