#:import MDDialog kivymd.uix.dialog.MDDialog



ScreenManager:
    TireScreen:
        name: "TireScreen"

        ScrollView:
            pos_hint: {"center_x": 0.72}
            do_scroll_y: True


            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(110)
                padding: dp(50)
                size_hint_y: None
                height: self.minimum_height

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_x: .5

                    MDLabel:
                        pos_hint: {"center_x": 0.67}
                        text: "Tire"
                        font_style: "H4"
                        theme_text_color: "Secondary"

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_x: .5

                    MDTextField:
                        hint_text: "Tire Width"
                        size_hint_x: .5
                        mode: "fill"
                        input_filter: 'int'

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_x: .5

                    MDTextField:
                        hint_text: "Tire Aspect Ratio"
                        size_hint_x: .5
                        mode: "fill"
                        input_filter: lambda x,y: str(x) if str(self.text+x).isdigit() and 0 < int(self.text+x) < 100 else False

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_x: .5

                    MDTextField:
                        hint_text: "Tire Radius"
                        size_hint_x: .5
                        mode: "fill"
                        input_filter: 'int'

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_x: .5

                    MDTextField:
                        hint_text: "Tire Friction Coefficient (Âµ)"
                        size_hint_x: .5
                        mode: "fill"
                        input_filter: 'int'

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_x: .5

                    MDTextField:
                        hint_text: "Rolling Resistance Coefficient (k)"
                        size_hint_x: .5
                        mode: "fill"
                        input_filter: 'int'


    EngineScreen:
    DrivetrainScreen:
    AeroScreen:
    ResultsScreen:

