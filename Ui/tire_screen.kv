<TireScreen>:
    name: "TireScreen"

    ScrollView:
        do_scroll_y: True


        MDBoxLayout:
            id: tire_vertical_boxlayout
            orientation: "vertical"
            adaptive_width: False
            spacing: sp(110)
            padding: sp(50)
            size_hint_y: None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5}


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDLabel:
                    pos_hint: {"center_x": 0.67}
                    text: "Tire"
                    font_style: "H4"
                    theme_text_color: "Secondary"
                    halign: 'center'
                    anchor_x: 'center'
                    width: self.parent.width


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Tire Width"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("tire_width")

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Tire Aspect Ratio"
                    mode: "fill"
                    input_filter: lambda x,y: str(x) if str(self.text+x).isdigit() and 0 < int(self.text+x) < 100 else False
                    size_hint_x: None
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("tire_aspect_ratio")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Wheel Diameter"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("tire_wheel_diameter")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Tire Friction Coefficient (Âµ)"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("tire_friction_coeff")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Rolling Resistance Coefficient (k)"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("tire_rolling_res_coeff")