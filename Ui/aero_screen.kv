<AeroScreen>:
    name: "AeroScreen"

    ScrollView:
        do_scroll_y: True


        MDBoxLayout:
            id: aero_vertical_boxlayout
            orientation: "vertical"
            adaptive_width: False
            spacing: sp(110)
            padding: sp(50)
            size_hint_y: None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5}

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)


                MDLabel:
                    text: "Aerodynamics"
                    font_style: "H4"
                    theme_text_color: "Secondary"
                    halign: 'center'
                    anchor_x: 'center'
                    width: self.parent.width

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Coefficient of Drag"
                    mode: "fill"
                    input_filter: 'float'
                    size_hint_x: None
                    on_text_validate: app.next_text_field(self)
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("aero_drag_coeff")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Frontal Area"
                    mode: "fill"
                    input_filter: 'float'
                    size_hint_x: None
                    on_text_validate: app.next_text_field(self)
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("aero_frontal_area")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Air Density"
                    mode: "fill"
                    input_filter: 'float'
                    size_hint_x: None
                    on_text_validate: app.next_text_field(self)
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("aero_air_density")

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2


                MDLabel:
                    text: "Downforce Calculation"
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {"center_y": 0.5}
                    width: sp(245)

                MDSwitch:
                    id: downforce_switch
                    thumb_color_down: 1,0,0,1
                    pos_hint: {"center_y": 0.5}
                    name: "downforce_switch"
                    active: False
                    on_active: app.show_hide_ui(self, self.active, negative_lift_coefficient, downforce_total_area, downforce_distribution, negative_lift_coefficient_info, downforce_total_area_info, downforce_distribution_info)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    pos_hint: {"center_y": 0.5}
                    on_press: app.dialog_information("downforce")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    id: negative_lift_coefficient
                    hint_text: "Negative Lift Coefficient"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    visible: False
                    opacity: 1 if self.visible else 0
                    disabled: not self.visible
                    on_text_validate: app.next_text_field(self)
                    width: sp(300)

                MDIconButton:
                    id: negative_lift_coefficient_info
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    visible: False
                    opacity: 1 if self.visible else 0
                    disabled: not self.visible
                    on_press: app.dialog_information("weight_shifting")

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    id: downforce_total_area
                    hint_text: "Downforce Total Area"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    visible: False
                    opacity: 1 if self.visible else 0
                    disabled: not self.visible
                    on_text_validate: app.next_text_field(self)
                    width: sp(300)

                MDIconButton:
                    id: downforce_total_area_info
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    visible: False
                    opacity: 1 if self.visible else 0
                    disabled: not self.visible
                    on_press: app.dialog_information("weight_shifting")

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    id: downforce_distribution
                    hint_text: "Downforce Distribution"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    visible: False
                    opacity: 1 if self.visible else 0
                    disabled: not self.visible
                    on_text_validate: app.next_text_field(self)
                    width: sp(300)

                MDIconButton:
                    id: downforce_distribution_info
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    visible: False
                    opacity: 1 if self.visible else 0
                    disabled: not self.visible
                    on_press: app.dialog_information("weight_shifting")