#:import MDDialog kivymd.uix.dialog.MDDialog

ScreenManager:
    CarScreen:
        name: "CarScreen"

        MDLabel:
            text: "Car Info"
            halign: "center"
            pos_hint: {"y": 0.45}
            font_style: "H5"
            theme_text_color: "Secondary"

        MDTextField:
            hint_text: "Car Name"
            pos_hint: {"center_x": .5, "y": .8}
            size_hint_x: .5
            mode: "fill"


        MDTextField:
            hint_text: "Car Mass"
            pos_hint: {"center_x": .5, "y": .65}
            size_hint_x: .5
            mode: "fill"
            input_filter: 'int'

        MDTextField:
            hint_text: "Car Mass Distribution"
            pos_hint: {"center_x": .5, "y": .5}
            size_hint_x: .5
            mode: "fill"
            helper_text: "Percentage of mass on the front axle of the car, between 0 and 100"
            helper_text_mode: "persistent"
            input_filter: lambda x,y: str(x) if str(self.text+x).isdigit() and 0 < int(self.text+x) < 100 else False

        MDLabel:
            pos_hint: {'center_x': .75, 'center_y': .40}
            text: "Extra Calculations (Weight Shifting) "

        MDSwitch:
            pos_hint: {'center_x': .72, 'center_y': .40}
            active: False

        MDIconButton:
            icon: 'information'
            on_release: Factory.MyPopup().open()

        MDRectangleFlatButton:
            text: "ALERT POPUP!"
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release: app.show_alert_dialog()



    EngineScreen:
    DrivetrainScreen:
    TireScreen:
    AeroScreen:
    ResultsScreen:


