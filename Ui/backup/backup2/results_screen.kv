<ResultsScreen>:
    name: "ResultsScreen"

    ScrollView:
        do_scroll_y: True

        MDBoxLayout:
            orientation: "vertical"
            adaptive_width: False
            spacing: sp(110)
            padding: sp(50)
            size_hint_y: None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5}


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDLabel:
                    pos_hint: {"center_x": 0.67}
                    text: "Results"
                    font_style: "H4"
                    theme_text_color: "Secondary"
                    halign: 'center'
                    anchor_x: 'center'
                    width: self.parent.width


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDTextField:
                    hint_text: "Initial Speed"
                    size_hint_x: .5
                    mode: "fill"
                    input_filter: 'int'

                MDIconButton:
                    size_hint_x: .05
                    icon: 'information'
                    on_press: app.dialog_information("results_initial_speed")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDTextField:
                    hint_text: "Final Speed"
                    size_hint_x: .5
                    mode: "fill"
                    input_filter: 'int'

                MDIconButton:
                    size_hint_x: .05
                    icon: 'information'
                    on_press: app.dialog_information("results_final_speed")



            MDBoxLayout:
                orientation: "vertical"
                adaptive_width: False
                spacing: sp(20)

                MDFillRoundFlatButton:
                    text: "Estimate Acceleration"
                    size_hint_x: None
                    width: dp(200)
                    md_bg_color: app.theme_cls.primary_color
                    on_release: print("Button pressed!")
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
