
<SettingsScreen>
    switchTestMode: switchTestMode

    name: 'settings'
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Acceleration Approximator - Settings"
            pos_hint: {"top": 1}
            size_hint_y: 0.1
            elevation: 0
            left_action_items: [['menu', lambda x: root.parent.parent.children[0].set_state("open")]]

        MDGridLayout:
            cols: 2
            padding: dp(20)
            adaptive_height: True
            #md_bg_color: app.theme_cls.primary_color

            TwoLineListItem:
                text: "Setting"
                secondary_text: "Toggle switch"
                #halign: 'center'
                #pos_hint: {'center_x': .5, 'center_y': .5}

            MDSwitch:
                id: switchTestMode
                #active: root.testModus


        Widget:

        MDGridLayout:
            cols: 2
            padding: dp(20)
            spacing: dp(20)
            adaptive_height: True
            #md_bg_color: app.theme_cls.primary_color

            MDRectangleFlatButton:
                text: "Save"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                on_release:
                    root.save_settings()
                    root.manager.current = 'main'

            MDRectangleFlatButton:
                text: "Cancel"
                on_release:
                    root.manager.current = 'main'



