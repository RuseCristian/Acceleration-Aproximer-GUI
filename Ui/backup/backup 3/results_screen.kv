<ResultsScreen>:
    name: "ResultsScreen"

    ScrollView:
        do_scroll_y: True

        MDBoxLayout:
            orientation: "vertical"
            adaptive_width: False
            spacing: sp(110)
            padding: sp(50)
            size_hint_y: None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5}


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDLabel:
                    pos_hint: {"center_x": 0.67}
                    text: "Results"
                    font_style: "H4"
                    theme_text_color: "Secondary"
                    halign: 'center'
                    anchor_x: 'center'
                    width: self.parent.width


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2

                MDTextField:
                    hint_text: "Initial Speed"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("results_initial_speed")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                size_hint_x: 0.5
                spacing: sp(20)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                Widget:
                    size_hint_x: None
                    width: (self.parent.width - sp(300) - sp(40)) / 2
                    # sp(300) text field width, sp(40) spacing is 20, so for the 2 elements is 40 because the first element
                    # has 20 spacing to its right and the second element has spacing 20 to its left

                MDTextField:
                    hint_text: "Final Speed"
                    mode: "fill"
                    input_filter: 'int'
                    size_hint_x: None
                    width: sp(300)

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("results_final_speed")




            MDBoxLayout:
                orientation: "vertical"
                adaptive_width: False
                spacing: sp(20)

                MDFillRoundFlatButton:
                    text: "Estimate Acceleration"
                    size_hint_x: None
                    width: sp(200)
                    md_bg_color: app.theme_cls.primary_color
                    on_release: print("Button pressed!")
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
