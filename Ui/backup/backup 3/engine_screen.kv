
<EngineScreen>:
    name: "EngineScreen"

    ScrollView:
        do_scroll_y: True

        MDBoxLayout:
            orientation: "vertical"
            adaptive_width: False
            spacing: sp(110)
            padding: sp(50)
            size_hint_y: None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5}


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDLabel:
                    pos_hint: {"center_x": 0.67}
                    text: "Engine"
                    font_style: "H4"
                    theme_text_color: "Secondary"
                    halign: 'center'
                    anchor_x: 'center'
                    width: self.parent.width

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDTextField:
                    hint_text: "Idle RPM"
                    size_hint_x: .5
                    mode: "fill"
                    input_filter: 'int'

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("engine_idle_rpm")


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDTextField:
                    hint_text: "Redline RPM"
                    size_hint_x: .5
                    mode: "fill"
                    input_filter: 'int'

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("engine_redline_rpm")

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_width: False
                spacing: sp(20)

                MDLabel:
                    text: "Rpm/Torque Entries"
                    pos_hint: {"center_y": 0.5}

                MDIconButton:
                    size_hint_x: None
                    width: sp(24)
                    icon: 'information'
                    padding: sp(2)
                    on_press: app.dialog_information("add_rpm_torque_entries")


            MDBoxLayout:
                orientation: "vertical"
                adaptive_width: False
                spacing: sp(20)

                MDFillRoundFlatButton:
                    text: "Remove"
                    size_hint_x: None
                    width: sp(200)
                    md_bg_color: app.theme_cls.primary_color
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_release: app.remove_rpm_torque_text_field()

                MDFillRoundFlatButton:
                        text: "Add"
                        size_hint_x: None
                        width: sp(200)
                        md_bg_color: app.theme_cls.primary_color
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_release: app.add_rpm_torque_text_field()