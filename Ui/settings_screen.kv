
<SettingsScreen>

    MDBoxLayout:
        orientation: "vertical"
        adaptive_width: False

        MDTopAppBar:
            title: "Acceleration Approximer"
            pos_hint: {"top": 1}
            size_hint_y: 0.05
            elevation: 0
            left_action_items: [['menu', lambda x: app.open_nav_drawer()]]
            right_action_items: [["arrow-left", lambda x: app.close_settings_app()]]

        ScrollView:
            do_scroll_y: True

            MDBoxLayout:
                orientation: "vertical"
                adaptive_width: False
                spacing: sp(110)
                padding: sp(50)
                size_hint_y: None
                size: self.minimum_size
                pos_hint: {'center_x': 0.5}

                MDLabel:
                    text: 'Choose theme type:'
                    halign: 'center'
                    font_style: 'H6'
                MDSwitch:
                    id: theme_switch
                    active: True
                MDLabel:
                    text: 'Light theme' if theme_switch.active else 'Dark theme'
                    halign: 'center'
                    font_style: 'Subtitle1'

                # Choose accent color
                MDLabel:
                    text: 'Choose accent color:'
                    halign: 'center'
                    font_style: 'H6'
                MDBoxLayout:
                    adaptive_height: True
                    spacing: dp(10)
                    MDIconButton:
                        icon: 'palette'
                    MDLabel:
                        halign: 'center'
                        font_style: 'Subtitle1'

